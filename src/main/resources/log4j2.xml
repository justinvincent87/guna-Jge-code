<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="LOG_ROOT_DIR">/home/gunalan/Desktop</Property>
        <Property name="LOG_FILE_PREFIX">geo-tab-services</Property>
        <Property name="LOG_FILE_SIZE">5000KB</Property>
        <Property name="LOG_LEVEL">debug</Property>
        <Property name="MAX_BACKUP">30</Property>
        
        <!-- Log patterns -->
        <Property name="LOG_PATTERN">
        	%d{yyyy-MM-dd}T%d{HH:mm:ss.SSSXXX}, Level=%-5p, class=%c{1}, Thread=%t, Message=[%m]%n
        </Property>
        <Property name="COLOR_PATTERN">
        	%d{HH:mm:ss.SSSXXX}, Level=%-5p, class=%c{1}, Message=[%m]%n
        </Property>
    </Properties>
 
    <Appenders>
    
    	<Console name="CONSOLE" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${COLOR_PATTERN}" />
        </Console>
    	
        <RollingFile 
        	name="FILE" 
        	append="true"
        	fileName="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}.log" 
        	filePattern="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${MAX_BACKUP}"/>
        </RollingFile>
        
        <RollingFile 
        	name="FILE_ERROR" 
        	append="true"
        	fileName="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-error.log" 
        	filePattern="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-error-%d{yyyy-MM-dd}.log">
        	<ThresholdFilter level="warn"/>
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${MAX_BACKUP}"/>
        </RollingFile>
        
        <RollingFile 
        	name="FILE_ALL" 
        	append="true"
        	fileName="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-all.log" 
        	filePattern="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-all-%d{yyyy-MM-dd}.log">
        	<ThresholdFilter level="warn"/>
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${MAX_BACKUP}"/>
        </RollingFile>
        
        <RollingFile 
        	name="METRICS" 
        	append="true"
        	fileName="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-metrics.log" 
        	filePattern="${LOG_ROOT_DIR}/${LOG_FILE_PREFIX}-metrics-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${MAX_BACKUP}"/>
        </RollingFile>
 
    </Appenders>
    <Loggers>
    	<Logger name="com.vibaps.merged.safetyreport.config.aop.PerformanceAspect" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="METRICS" />
            <appender-ref ref="FILE_ALL" />
        </Logger>
        <Logger name="com.lytx" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
            <appender-ref ref="FILE_ERROR" />
            <appender-ref ref="FILE_ALL" />
        </Logger>
        <Logger name="com.vibaps" level="${LOG_LEVEL}" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
            <appender-ref ref="FILE_ERROR" />
            <appender-ref ref="FILE_ALL" />
        </Logger>
        
        <Root level="info">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE_ERROR" />
            <appender-ref ref="FILE_ALL" />
        </Root>
    </Loggers>
</Configuration>