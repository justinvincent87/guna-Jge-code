<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

	<property resource="logback-conf.properties" />

	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${color.pattern}</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.root.dir}/${log.file.prefix}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${log.root.dir}/${log.file.prefix}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${log.max.file.size}</maxFileSize>
			<maxHistory>${log.max.history}</maxHistory>
			<totalSizeCap>${log.file.cap.size}</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${log.pattern}</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE_ALL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.root.dir}/${log.file.prefix}-all.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${log.root.dir}/${log.file.prefix}-all.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${log.max.file.size}</maxFileSize>
			<maxHistory>${log.max.history}</maxHistory>
			<totalSizeCap>${log.file.cap.size}</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${log.pattern}</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE_ERR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${log.root.dir}/${log.file.prefix}-error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${log.root.dir}/${log.file.prefix}-error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${log.max.file.size}</maxFileSize>
			<maxHistory>${log.max.history}</maxHistory>
			<totalSizeCap>${log.file.cap.size}</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>${log.pattern}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>

	<appender name="EMAIL"
		class="ch.qos.logback.classic.net.SMTPAppender">
		<smtpHost>${smtp.host}</smtpHost>
		<smtpPort>${smtp.port}</smtpPort>
		<username>${smtp.user}</username>
		<password>${smtp.pwd}</password>
		<from>${smtp.user}</from>
		<STARTTLS>true</STARTTLS>

		<to>${smtp.to.1}</to>
		<!-- <to>${smtp.to.2}</to>
		<to>${smtp.to.3}</to> -->

		<subject>Geotab-API error notification</subject>
		<layout class="ch.qos.logback.classic.html.HTMLLayout">
			<pattern>%date%level%logger{24}%msg</pattern>
		</layout>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
	</appender>
	
	<logger name="com.vibaps" level="debug">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="FILE_ALL" />
		<appender-ref ref="FILE_ERR" />
		<appender-ref ref="EMAIL" />
	</logger>
	
	<logger name="com.lytx" level="debug">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="FILE_ALL" />
		<appender-ref ref="FILE_ERR" />
		<appender-ref ref="EMAIL" />
	</logger>
	
	<logger name="com.vibaps.merged.safetyreport.config.aop.PerformanceAspect" level="debug">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="FILE_ALL" />
		<appender-ref ref="FILE_ERR" />
	</logger>
	
	
	
	
	<root level="${log.level}">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE_ALL" />
		<appender-ref ref="EMAIL" />
		<appender-ref ref="FILE_ERR" />
	</root>
</configuration>